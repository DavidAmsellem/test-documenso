# Configuración de ejemplo para localhost
# Database
POSTGRES_USER=documenso
POSTGRES_PASSWORD=secure-password-123
POSTGRES_DB=documenso

# Application
PORT=3000
NEXTAUTH_SECRET=very-secure-secret-key-32-chars
NEXT_PRIVATE_ENCRYPTION_KEY=encryption-key-32-characters
NEXT_PRIVATE_ENCRYPTION_SECONDARY_KEY=secondary-key-32-characters
NEXT_PUBLIC_WEBAPP_URL=http://localhost:3000
NEXT_PRIVATE_INTERNAL_WEBAPP_URL=http://documenso:3000

# Email Configuration
NEXT_PRIVATE_SMTP_FROM_ADDRESS=noreply@localhost
NEXT_PRIVATE_SMTP_FROM_NAME=Documenso Local
NEXT_PRIVATE_SMTP_HOST=smtp.gmail.com
NEXT_PRIVATE_SMTP_PORT=587
NEXT_PRIVATE_SMTP_USERNAME=test@gmail.com
NEXT_PRIVATE_SMTP_PASSWORD=test-password

# File Storage (local para desarrollo)
NEXT_PRIVATE_UPLOAD_TRANSPORT=local

# SMS Authentication (configurar para producción)
NEXT_PRIVATE_SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-sid-here
TWILIO_AUTH_TOKEN=your-twilio-token-here
TWILIO_PHONE_NUMBER=+1234567890

# OAuth Providers (opcional)
NEXT_PRIVATE_GOOGLE_CLIENT_ID=
NEXT_PRIVATE_GOOGLE_CLIENT_SECRET=

# Signing Certificate
NEXT_PRIVATE_SIGNING_TRANSPORT=local
NEXT_PRIVATE_SIGNING_LOCAL_FILE_PATH=/app/cert/certificate.p12

# Production Settings
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
LOG_LEVEL=info
