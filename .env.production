# Variables de entorno para producción
# Copia este archivo y ajusta los valores según tu entorno

# Base
NEXTAUTH_URL=https://tu-dominio.com
NEXTAUTH_SECRET=tu-secreto-muy-seguro-de-32-caracteres

# Database
DATABASE_URL=postgresql://documenso:password@database:5432/documenso

# Email (SMTP)
NEXT_PRIVATE_SMTP_FROM_ADDRESS=noreply@tu-dominio.com
NEXT_PRIVATE_SMTP_FROM_NAME="Tu Empresa"
NEXT_PRIVATE_SMTP_HOST=smtp.tu-proveedor.com
NEXT_PRIVATE_SMTP_PORT=587
NEXT_PRIVATE_SMTP_USERNAME=tu-usuario-smtp
NEXT_PRIVATE_SMTP_PASSWORD=tu-password-smtp

# File Storage (S3-compatible)
NEXT_PRIVATE_UPLOAD_TRANSPORT=s3
NEXT_PRIVATE_UPLOAD_BUCKET=tu-bucket
NEXT_PRIVATE_UPLOAD_REGION=us-east-1
NEXT_PRIVATE_UPLOAD_ACCESS_KEY_ID=tu-access-key
NEXT_PRIVATE_UPLOAD_SECRET_ACCESS_KEY=tu-secret-key

# SMS Authentication (para el sistema que implementamos)
NEXT_PRIVATE_SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=tu-twilio-sid
TWILIO_AUTH_TOKEN=tu-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# OAuth Providers (opcional)
NEXT_PRIVATE_GOOGLE_CLIENT_ID=tu-google-client-id
NEXT_PRIVATE_GOOGLE_CLIENT_SECRET=tu-google-client-secret

# Signing Certificate
NEXT_PRIVATE_SIGNING_TRANSPORT=local
NEXT_PRIVATE_SIGNING_LOCAL_FILE_PATH=/app/certificate.p12
NEXT_PRIVATE_SIGNING_LOCAL_FILE_CONTENTS=base64-encoded-certificate

# Production optimizations
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
